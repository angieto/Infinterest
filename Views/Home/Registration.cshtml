@model UserValidator
@{
    ViewData["Title"] = "Infinterest Registration";
}

<h1>Register or sign in to access your account</h1>
    
<div class="container"> 
    <div class="row">      

        <form class="col" asp-action="PostRegister" asp-controller="Home" method="post">
            <h3 class="mt-3">Register</h3><br>
            <p><span class="errors" asp-validation-for="FirstName"></span></p>
            <label asp-for="FirstName"></label>
            <input class="" asp-for="FirstName"><br><br>
                
            <p><span class="errors" asp-validation-for="LastName"></span></p>
            <label asp-for="LastName"></label>
            <input class="" asp-for="LastName"><br><br>

            <p><span class="errors" asp-validation-for="Email"></span></p>
            <label asp-for="Email"></label>
            <input class="" asp-for="Email">
            <small id="" class="form-text text-muted">We'll never share your email with anyone else.</small>
            <br><br>

            <p><span class="errors" asp-validation-for="Password"></span></p>
            <label asp-for="Password"></label>
            <input asp-for="Password"><br><br>

            <p><span class="errors" asp-validation-for="PasswordConfirm"></span></p>
            <label asp-for="PasswordConfirm"></label>
            <input asp-for="PasswordConfirm"><br><br>
            <button class="checkout btn" type="submit">Register</button> 
        </form><br><br>

        <p class="errors">@ViewBag.ErrorReg</p>
    
        <form class="col" action="PostLogin" method="post">
        <h3 class="mt-3">Login</h3><br>   
    
            <p class="errors">@ViewBag.Error</p>
            
            <label for="EmailLogin">Email: </label>
            <input id="EmailLogin" type="text" name="EmailLogin"><br><br>
                
            <label for="PasswordLogin">Password: </label>
            <input id="PasswordLogin" type="password" name="PasswordLogin"><br><br>
                    
            <button class="checkout btn" type="submit">Login</button>  
        </form>
    </div> 
</div>